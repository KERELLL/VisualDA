<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
	android:orientation="vertical"
	 android:gravity="center_horizontal"
    android:layout_height="match_parent">
		<TextView
			android:textSize="@dimen/textSizeProgramm"
			android:textColor="#000000"
			android:gravity="center"
			android:text="Последовательность Фибоначчи"
			android:layout_width="wrap_content"
			android:textStyle="bold"
			android:layout_height="wrap_content"
			android:layout_marginRight="0.0dp"
			android:layout_marginBottom="10.0dp"
			android:layout_marginTop="31.0dp"/>
		<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:gravity="left"
			android:textSize="17dp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:layout_marginRight="16.0dp"
			android:layout_marginLeft="10.0dp"
			android:text="Формулировка задачи"/>
		<TextView
			android:text="@string/Fib_des"
			android:textColor="#000000"
			android:gravity="left"
			android:textSize="16dp"
			android:layout_width="match_parent"
			android:id="@+id/taskDescription"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10.0dp"
			android:layout_marginRight="16.0dp" />
		<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:gravity="left"
			android:textSize="17dp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:layout_marginRight="16.0dp"
			android:layout_marginLeft="10.0dp"
			android:text="Сложность"/>
		<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:gravity="left"
			android:textSize="17dp"
			android:textColor="#1E90FF"
			android:layout_marginRight="16.0dp"
			android:layout_marginLeft="10.0dp"
			android:text="O(N)"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textStyle="bold"
			android:id="@+id/taskMethod"
			android:gravity="left"
			android:textSize="16dp"
			android:layout_marginLeft="10.0dp"
			android:text="Метод решения"
			android:layout_marginRight="16dp" />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#1E90FF"
			android:id="@+id/formulaTextView"
			android:gravity="left"
			android:textSize="16dp"
			android:layout_marginLeft="10.0dp"
			android:text="Fn = Fn-1 + Fn-2"
			android:layout_marginRight="16dp" />
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:id="@+id/formulaTextViewDes"
			android:gravity="left"
			android:textSize="16dp"
			android:layout_marginLeft="10.0dp"
			android:text="@string/Fib_met"
			android:layout_marginRight="16dp" />
		<ImageView
			android:layout_width="280dp"
			android:layout_height="35dp"
			android:background="@drawable/fibinfopic"
			android:layout_marginTop="10.0dp" />
	</LinearLayout>
</ScrollView>